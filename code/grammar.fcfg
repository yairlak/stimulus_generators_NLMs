% start S

# Template 1 :
# probjNoun  / full-subject
# main number
# main gender
# tense
# verb type

#######################
# Grammar Productions #
#######################
S -> subjNP[NUM=?n, animate=?a] VP[NUM=?n, animate=?a]

# subject
subjNP[NUM=?n, GEN=?g, animate=true] -> subj_PropN[NUM=?n, GEN=?g, animate=true]
subjNP[NUM=?n, animate=?a] -> subj_Det[NUM=?n] subj_N[NUM=?n, animate=?a]
subjNP[NUM=?n, animate=?a] -> subj_Quantifier[NUM=?n] subj_N[NUM=?n, animate=?a]
subjNP[NUM=?n, GEN=?g, animate=?a] -> subj_PRO[NUM=?n, GEN=?g, animate=?a]

# verb
VP[TENSE=?t, NUM=?n, animate=?a] -> verb_Intrans[TENSE=?t, NUM=?n, animate=?a]
VP[TENSE=?t, NUM=?n, animate=?a] -> verb_Trans[TENSE=?t, NUM=?n, animate=?a] objNP

verb_Intrans[TENSE=future, animate=?a] -> verb_Mod[TENSE=future] inf[animate=?a]

# object
objNP[NUM=?n] -> obj_PropN[NUM=?n, GEN=?g]
objNP[NUM=?n] -> obj_Det[NUM=?n] obj_N[NUM=?n]
objNP[NUM=?n] -> obj_Quantifier[NUM=?n] obj_N[NUM=?n]
objNP[NUM=?n] -> obj_PRO[NUM=?n, GEN=?g]

#######################
# Lexical Productions #
#######################


# subject
subj_Det[NUM=sg] -> 'this'
subj_Det[NUM=pl] -> 'these'
subj_Det -> 'the'

subj_Quantifier[NUM=sg] -> 'every'
subj_Quantifier[NUM=pl] -> 'all'

subj_PRO[NUM=sg, animate=true]->'I'
subj_PRO[NUM=pl, animate=true]->'you'
subj_PRO[NUM=sg, GEN=m, animate=true]->'he'
subj_PRO[NUM=sg, GEN=f, animate=true]->'she'
subj_PRO[NUM=sg, animate=false]->'it'
subj_PRO[NUM=pl, animate=true]->'they'|'we'

subj_N[NUM=sg, GEN=m, animate=true] -> 'boy'|'man'
subj_N[NUM=sg, GEN=f, animate=true] -> 'man'|'woman'
subj_N[NUM=pl, GEN=m, animate=true] -> 'boys'|'men'
subj_N[NUM=pl, GEN=f, animate=true] -> 'girls'|'women'

subj_N[NUM=sg, animate=false] -> 'cat'|'dog'|'mouse'
subj_N[NUM=pl, animate=false] -> 'cat'|'dog'|'mice'

subj_PropN[NUM=sg, GEN=f, animate=true]-> 'Alice'|'Mary'
subj_PropN[NUM=sg, GEN=m, animate=true]-> 'Bob'|'John'

# object
obj_Det[NUM=sg] -> 'this'
obj_Det[NUM=pl] -> 'these'
obj_Det -> 'the'

obj_Quantifier[NUM=sg] -> 'every'
obj_Quantifier[NUM=pl] -> 'all'

obj_PRO[NUM=sg, animate=true]->'me'
obj_PRO[animate=true]->'you'
obj_PRO[NUM=sg, GEN=m, animate=true]->'him'
obj_PRO[NUM=sg, GEN=f, animate=true]->'her'
obj_PRO[NUM=pl, animate=true]->'them'|'us'

obj_N[NUM=sg, GEN=m, animate=true] -> 'boy'|'man'
obj_N[NUM=sg, GEN=f, animate=true] -> 'man'|'woman'
obj_N[NUM=pl, GEN=m, animate=true] -> 'boys'|'men'
obj_N[NUM=pl, GEN=f, animate=true] -> 'girls'|'women'

obj_N[NUM=sg, animate=false] -> 'cat'|'dog'|'mouse'
obj_N[NUM=pl, animate=false] -> 'cat'|'dog'|'mice'

obj_PropN[NUM=sg, GEN=f, animate=true]-> 'Alice'|'Mary'
obj_PropN[NUM=sg, GEN=m, animate=true]-> 'Bob'|'John'

# verb
verb_Intrans[TENSE=pres,  NUM=sg, animate=true] -> 'walks'|'smiles'|'cries'
verb_Intrans[TENSE=pres,  NUM=pl, animate=true] -> 'walk'|'smile'|'cry'
verb_Intrans[TENSE=past, animate=true] -> 'walked'|'smiled'|'cried'

verb_Intrans[TENSE=pres,  NUM=sg] -> 'falls'|'disappears'
verb_Intrans[TENSE=pres,  NUM=pl] -> 'fall'|'disappear'
verb_Intrans[TENSE=past] -> 'fell'

verb_Trans[TENSE=pres, NUM=sg, animate=true] -> 'sees'|'watches'
verb_Trans[TENSE=pres, NUM=pl, animate=true] -> 'see'|'watch'
verb_Trans[TENSE=past, animate=true] -> 'saw'|'watched'

inf[animate=true] -> 'walk'|'smile'|'cry'
inf -> 'fall'|'disappear'

verb_Mod[TENSE=future] -> 'will'
