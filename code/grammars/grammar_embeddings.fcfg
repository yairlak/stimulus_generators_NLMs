subj_N[NUM=pl, GEN=m, PERS=3, ANIM=true] -> 'boys'
subj_N[NUM=pl, GEN=f, PERS=3, ANIM=true] -> 'girls'


# embedded nouns
embedsubj_N[NUM=sg, GEN=m, PERS=3, ANIM=true, GROUP=objrel] -> 'boy'
