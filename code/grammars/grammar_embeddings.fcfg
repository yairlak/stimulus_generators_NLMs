#######################
# Grammar Productions #
#######################

# object RCs
S[GROUP=?g] -> Det subj_N[NUM=?n, PERS=3, ANIM=true] rel_That nestedS[GROUP=?g] verb_Intrans[TENSE=pres, NUM=?n, PERS=3, ANIM=true]
nestedS[NUM=?n] -> Det embedsubj_N[NUM=?n, ANIM=true, GROUP=objrel] embedverb_Trans[TENSE=pres, NUM=?n, PERS=3]
nestedS[NUM=?n] -> embedverb_Trans[TENSE=pres, NUM=?n, PERS=3] Det embedsubj_N[NUM=?n, ANIM=true, GROUP=subjrel]

# Embedding
S[GROUP=?g] -> Det subj_N[NUM=?n, PERS=?p, ANIM=true] verb_Matrix[NUM=?n, PERS=?p, ANIM=true] nestedClause[GROUP=?g]
nestedClause[GROUP=?g] -> rel_That Det embedsubj_N[NUM=?n, GROUP=embed_clause] embedverb_Intrans[NUM=?n, PERS=3]
nestedClause[GROUP=?g] -> rel_Whether Det embedsubj_N[NUM=?n, GROUP=embed_clause] embedverb_Intrans[NUM=?n, PERS=3]
#nestedClause -> Rel[REL=which] embedsubj_N[NUM=?n] embedverb_Intrans[NUM=?n, PERS=3]


#######################
# Lexical Productions #
#######################

# subject
subj_N[NUM=sg, GEN=m, PERS=3, ANIM=true] -> 'boy'
