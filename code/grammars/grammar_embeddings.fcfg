embedsubj_N[NUM=pl, GEN=f, PERS=3, ANIM=true, GROUP=subjrel] -> 'girls'
embedsubj_N[NUM=sg, GEN=m, PERS=3, ANIM=true, GROUP=embed_clause] -> 'boy'
